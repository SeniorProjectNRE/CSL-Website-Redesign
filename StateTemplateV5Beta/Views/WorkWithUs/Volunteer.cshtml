
@{
    ViewBag.Title = "CSL - Volunteer Program";
    ViewBag.PageTitle = "CSL Volunteer Program";
    ViewBag.Author = "Alan Cleetus";
    ViewBag.Description = "The California State Library has volunteer opportunities that can be located here. Be a part of history by contributing your talents to supporting the information and services provided by one of the oldest cultural institutions in California. You don't need to be a librarian to get involved. If you don't see an opportunity that you are interested in today, check back as more opportunities are always being added.";
   

<head>
    <title>@(ViewBag.Title)</title>
    <meta name="Author" content="@(ViewBag.Author)" />
    <meta name="Description" content="@(ViewBag.Description)" />
    <meta name="Keywords" content="@(ViewBag.Keywords)" />
     
</head>

<div id="main-content" class="main-content">
    <main class="main-primary">
        <div class="section">
            <div class="container">
                <ol class="breadcrumb dynamic"></ol>
                <div class="two-thirds">
                <h2 class="page-title">@(ViewBag.PageTitle)</h2>
                <img class="img img-responsive" src="~/Content/StateTemplate/images/volunteer/volunteer.jpg"/>
