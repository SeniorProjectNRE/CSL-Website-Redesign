

@{
    ViewBag.Title = "San Francisco Bay Area Genealogy Calendar";
    ViewBag.PageTitle = "CSL - San Francisco Bay Area Genealogy Calendar";
    ViewBag.Author = "California State Library";
    ViewBag.Description = "Sutro Library is the site to find all of the Bay Area's genealogy and family history events in one place, from Napa and Fairfield to Antioch and San Jose.";
}
<head>
    <title>@(ViewBag.Title)</title>
    <meta name="Author" content="@(ViewBag.Author)" />
    <meta name="Description" content="@(ViewBag.Description)" />
